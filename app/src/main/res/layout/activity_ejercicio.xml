<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tesis2.lifestyle.Ejercicio"
    android:background="#daf7da">

    <include layout="@layout/tool_bar_menu"
        android:id="@+id/include" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lista de ejercicios"
        android:id="@+id/tvTituloEjercicio"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dip"
        android:textSize="25dip"
        android:textColor="#446449"
        android:textStyle="bold"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvEjercicio"
        android:layout_below="@+id/tvTituloEjercicio"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
