    <TextView
        android:id="@+id/listaRepeticionEjercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeticiones"
        android:layout_below="@+id/listaDescripcionEjercicio3"
        android:layout_toRightOf="@+id/iconEjercicio3" />

    <TextView
        android:id="@+id/listaDuracionEjercicio3"
