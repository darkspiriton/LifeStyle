        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dip" />

    <TextView
        android:id="@+id/listaDescripcionEjercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/listaTituloEjercicio2"
        android:layout_toRightOf="@id/iconEjercicio2"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/listaRepeticionEjercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeticiones"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/listaDescripcionEjercicio2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        />

    <TextView
        android:id="@+id/listaDuracionEjercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duracion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/listaRepeticionEjercicio2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip" />

    <com.parse.ParseImageView
        android:id="@+id/iconEjercicio3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iconEjercicio2"
