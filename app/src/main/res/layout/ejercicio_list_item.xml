    <TextView
        android:id="@+id/listaRepeticionEjercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="repeticiones"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/listaDescripcionEjercicio3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"/>

    <TextView
        android:id="@+id/listaDuracionEjercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="duracion"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/listaRepeticionEjercicio3"
        android:layout_alignParentRight="true"
